<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GDG_SP.RSVPPage">
  <ScrollView>
    <StackLayout Padding="10">
      <Label Text="Você irá?"></Label>
      <Grid x:Name="ToAllGrid">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Switch x:Name="ResponseSwitch" />
        <Label x:Name="State" VerticalOptions="CenterAndExpand" Grid.Column="1" />
      </Grid>
      
      <StackLayout x:Name="QuestionsStack">
      </StackLayout>
      
      <Button x:Name="Send" Text="Enviar" />
    </StackLayout>
  </ScrollView>
</ContentPage>